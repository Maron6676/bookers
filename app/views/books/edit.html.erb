<h1>Editing Book</h1>

<% if @book.errors.any? %>
<%= @book.errors.count %> error prohibited this book from being saved:
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
 <div class="field">
  <h4 class="title">Title</h4>
  <%= f.text_field :title %>
 </div>
 <div class="field">
  <h4 class="body">Body</h4>
  <%= f.text_area :body %>
 </div>
 <div class="field">
  <%= f.submit 'Update Book' %>
 </div>

<% end %>

<span class="link"><%= link_to "Show", book_path(@book.id) %></span> | <span class="link"><%= link_to "Back", "/books" %></span>